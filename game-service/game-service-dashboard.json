{
  "id": null,
  "uid": "game-service-dashboard",
  "title": "Game Service Metrics",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "Memory Usage (RSS)",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "Memory (bytes)"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 2
        }
      }
    },
    {
      "type": "stat",
      "title": "CPU Time (User)",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total[1m])",
          "legendFormat": "CPU time"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 4
        }
      }
    },
    {
      "type": "stat",
      "title": "Event Loop Lag",
      "gridPos": { "x": 0, "y": 4, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds",
          "legendFormat": "Event Loop Lag"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "decimals": 4
        }
      }
    },
    {
      "type": "stat",
      "title": "Heap Usage",
      "gridPos": { "x": 6, "y": 4, "w": 6, "h": 4 },
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nodejs_heap_used_bytes",
          "legendFormat": "Heap Used"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "decimals": 2
        }
      }
    }
  ]
}
